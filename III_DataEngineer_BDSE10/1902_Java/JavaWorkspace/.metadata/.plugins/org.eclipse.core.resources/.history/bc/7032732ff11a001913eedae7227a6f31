import java.sql.Date;

public class TestFor20190118 {

	public static void main(String[] args) {
		// for迴圈
		for (int i = 0; i <= 5; i++) {
			System.out.println("你這傢伙是不是個白癡阿？ " + "X " + i);
		}

		// 計算1加到100的總和
		int sum = 0;
		for (int i = 0; i <= 100; i++) {
			sum = sum + i;
		}
		System.out.println("1加到100的總和是" + sum);

		// 計算100以內奇數的總和(for)
		int sum0 = 0;
		for (int i = 1; i <= 50; i++) {
			sum0 = sum0 + 1 + i * 2;
		}
		System.out.println(sum0);

		int sum1 = 0;
		for (int i = 1; i <= 100; i = i + 2) {
			sum1 = sum1 + i;
		}
		System.out.println(sum1);

		// 使用while來計算1至100的總和
		int i = 1;
		int sum2 = 0;
		while (i <= 100) {
			sum2 = sum2 + i;
			i++;
		}
		System.out.println(sum2);

	}

}
